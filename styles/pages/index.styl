@import '../vars_mixins';

.homepage :global {
	background: $colors.tuscany-muted;
	min-height: 100vh;
	padding: $space-small 0px;
	
	.row {
		padding: $space-small 0px;	
	}

	ul {
		li {
			padding: $space-x-small 0px;
			span {
				padding: 0px $space-x-small;
			}
		}
	}
	
	+above($breakpoint-mobile) {
		padding: $space-large 0px;
		.row {
			padding: $space-medium 0px;	
		}
		
		ul {
			li {
				padding: $space-small 0px;
			}
		}
	}	
}
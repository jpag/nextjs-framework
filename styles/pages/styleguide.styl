@import '../vars_mixins';

.grid :global,
.styleguide :global {
	padding: $space-medium 0px $space-large 0px;
	
	span {
		display: none;
		margin: 0px 0px;
		font-size: 1.4rem;
		vertical-align: middle;
		&.breakpoint-mobile {
			+below($breakpoint-mobile) {
				display: inline-block;
			}	
		}
		
		&.breakpoint-tablet {
			+between($breakpoint-mobile, $breakpoint-tablet) {
				display: inline-block;	
			}
		}
		&.breakpoint-desktop {
			+above($breakpoint-tablet) {
				display: inline-block;	
			}
		}
	}

	.page-title {
		
	}

	.row {
		&.demo {
			// background: #fcfcfc;
			padding: 0px 0px 10px 0px;
			
			grid-auto-rows: 100px;
			
			+above($breakpoint-mobile) {
				grid-auto-rows: 250px;
			}
			
			+above($breakpoint-tablet) {
				grid-auto-rows: 300px;
			}
			
			.col {
				border: 1px solid alpha($colors.primary-highlight, 0.5);
				background: alpha($colors.primary-highlight, 0.9);
				&.col-offset {
					background: $colors.gray;
				}
			}
		}
		&.row-solo {
			grid-auto-rows: auto;
			
			.col {
				background: $colors.black;
				color: #fff;
				text-align: center;
			}
		}
		&.row-headline {
			padding-top: 50px;
			grid-auto-rows: auto;
			.col {
				background: $colors.black;
				text-align: center;
			}
			span {
				display: inline-block;
				color: #fff;
			}
		}
	}
	
	// style guide page.
	.color-grid {
		grid-auto-rows: 150px;
		.col {
			border: 1px solid #eee;
			margin: $space-x-small 0px;
		}
	}
}